{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es2018",
    "lib": ["es2015", "es2016", "dom"],
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "lib"],
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "entryPoint": "interfaces/spscript"
  }
}
