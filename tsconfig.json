{
	"compilerOptions": {
		"outDir": "./lib/",
		"sourceMap": false,
		"noImplicitAny": false,
		"module": "esnext",
		"target": "es5",
		"lib": ["es2015", "es2016", "dom"],
		"declaration": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "lib"]
}
